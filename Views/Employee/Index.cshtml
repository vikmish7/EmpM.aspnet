@model IEnumerable<EmployeeManagementApp.ViewModels.EmployeeDepartmentViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int i = 1;
}

<h2>Employee Information </h2>
<table class="table">
    <tr>
        <td>Sr. No</td>
        <td>Employee Name</td>
        <td>Designation</td>
        @*<a href="~/Views/Employee/Index.cshtml">~/Views/Employee/Index.cshtml</a>*@
        <td>National ID</td>
        <td>Joining Date</td>
        <td>Code</td>
        <td>Department</td>
        <td>Blood Group</td>
        <td>Actions</td> <!-- New column for Edit and Delete buttons -->
    </tr>
    @foreach (var employee in Model)
    {
        <tr>
            <td>@i</td>
            <td>@employee.EmployeeName</td>
            <td>@employee.Designation</td>
            <td>@employee.NID</td>
            <td>@employee.JoiningDate</td>
            <td>@employee.Code</td>
            <td>@employee.DepartmentName</td>
            <td>@employee.BloodGroup</td>

            <!-- Edit and Delete buttons -->
            <td>
                @* Edit Button *@
                <a href="@Url.Action("Edit", "Employee", new { id = employee.EmployeeId })" class="btn btn-primary">Edit</a>

                @* Delete Button *@
                <a href="@Url.Action("Delete", "Employee", new { id = employee.EmployeeId })" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this employee?');">Delete</a>

  
            </td>
        </tr>
        i++;
    }
</table>
