{
  "name": "empm.aspnet",
  "version": "1.0.0",
  "description": "A simple ASP.NET application to manage employees and departments.",
  "main": "index.js",
  "scripts": {
    "test": "jest --verbose",
    "tsc": "tsc"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@cypress/code-coverage": "^3.13.10",
    "@playwright/test": "^1.49.1",
    "@types/jquery": "^3.5.32",
    "babel-jest": "^29.7.0",
    "babel-plugin-istanbul": "^7.0.0",
    "cypress": "^13.17.0",
    "istanbul-lib-coverage": "^3.2.2",
    "istanbul-lib-instrument": "^6.0.3",
    "jasmine": "^5.5.0",
    "jasmine-core": "^5.5.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jest-playwright-preset": "^4.0.0",
    "jquery": "^3.7.1",
    "jsdom": "^25.0.1",
    "karma": "^6.4.4",
    "karma-chrome-launcher": "^3.2.0",
    "karma-html-reporter": "^0.2.7",
    "karma-jasmine": "^5.1.0",
    "karma-jasmine-html-reporter": "^2.1.0",
    "nyc": "^17.1.0",
    "playwright": "^1.49.1",
    "typescript": "^5.7.2"
  },
  "jest": {
    "preset": "jest-playwright-preset",
    "testTimeout": 30000,
    "testMatch": [
      "**/__tests__/*.test.js"
    ],
    "launchOptions": {
      "headless": false
    }
  },
  "nyc": {
    "reporter": [
      "text",
      "html",
      "json"
    ],
    "instrument": true,
    "sourceMap": false,
    "compact": false,
    "include": [
      "instrumented/Scripts/Employee.js"
    ],
    "exclude": [
      "node_modules",
      "cypress/**/*"
    ]
  },
  "dependencies": {
    "@progress/kendo-ui": "^2024.4.1112",
    "jest-environment-jsdom-fourteen": "^1.0.1",
    "karma-requirejs": "^1.1.0"
  }
}
